<div class="comments">
    <h3 class="text-center">Comments</h3>
    {{#each this}}
    <div class="card">
        <div class="card-header">{{user.username}}</div>
        <div class="card-body">
            <p>{{text}}</p>
            <p>Date: {{format_date created_at}}</p>
        </div>
    </div>
    {{/each}}
</div>